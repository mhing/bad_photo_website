<% provide(:title, 'Model Tests') %>
<div id="modelTestsCarousel" class="carousel" data-ride="carousel">
	<!-- indicators -->
	<ol class="carousel-indicators">
		<li data-target="#modelTestsCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#modelTestsCarousel" data-slide-to="1"></li>
		<li data-target="#modelTestsCarousel" data-slide-to="2"></li>
    </ol>
	<div id="image-frame" class="carousel-inner">
		<div class="item active">
			<%= image_tag("modelTests/testShoot1.jpg", alt: "First image") %>
		</div>
		<div class="item">
			<%= image_tag("modelTests/testShoot2.jpg", alt: "Second image") %>
		</div>
		<div class="item">
			<%= image_tag("modelTests/testShoot3.jpg", alt: "Third image") %>
		</div>
	</div>
	<a class="left carousel-control" href='' data-slide="prev">
		<span class="glyphicon glyphicon-chevron-left"></span>
	</a>
	<a class="right carousel-control" href='' data-slide="next">
		<span class="glyphicon glyphicon-chevron-right"></span>
	</a>
</div>
<%= render 'layouts/copyright' %>